<% const estaCreando = typeof noticia === "undefined"%>
<h1><%= estaCreando? 'Crear':'Actualizar'%> Noticia</h1>\
<p><%= estaCreando? 'Cree':'Actualice'%> una noticia</p>

<!-- emmet -->

<form action="/<%= estaCreando ? 'crear' : 'actualizar' %>-noticia/<%= estaCreando ? '' : noticia.id %>"
method="post">
    <div>
    <label for="titulo">TITULO</label>
    <input id="Titulo" name="titulo" type="text" value="<%= estaCreando? '':noticia.titulo%>">
    </div>
    <div>
    <label for="">Descripcion</label>
    <textarea id="descripcion"
              name="descripcion"
              cols="30" rows="4">
        <%= estaCreando? '':noticia.descripcion%>
    </textarea>
    </div>

    <button><%= estaCreando ? 'Crear' : 'Actualizar' %> noticia</button>
</form>

<a href="/inicio"><button>Regresar</button></a>